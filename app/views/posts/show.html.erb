<div class="mx-auto max-w-2xl w-full">
  <%= render @post %>

  <div class="flex space-x-2 mt-8">
    <%= link_to "Edit", edit_post_path(@post), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= button_to "Destroy", post_path(@post), method: :delete, class: "rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    <%= link_to "All posts", posts_path, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
